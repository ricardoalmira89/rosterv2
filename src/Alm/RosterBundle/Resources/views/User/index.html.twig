{% extends '@Roster/Form/index-layout.html.twig' %}

{% block buttons %}
<li><a href="{{ path('usuario_change_password', {'id' : entity.id}) }}">Cambiar contraseña</a></li>
{% endblock %}
{% block text %}
	<div class="row">
		<div class="col-lg-12">
			<h1>Es hora de trabajar!</h1>
			<p>El contacto es la herramienta importante... <strong class="text-primary">entre ellos y nosostros!</strong> <a href="{{ path('fos_user_registration_register') }}" class="btn btn-default active pull-right text-normal"><span class="glyphicon glyphicon-plus"></span>
					Agregar</a></p>
		</div>
	</div>
{% endblock %}

{% block searchForm %}
	{{ form_start(form, {'action': path('usuario'), 'method' : 'POST', 'attr' : {'class' : 'navbar-form navbar-left', 'style' : 'width:100%;'}}) }}
	Búscar empresa por:
	{{ form_errors(form) }}
	{{ form_widget(form.empresa, {'attr' : {'class' : 'form-control inputsearchbox', 'style' : 'background:#999; color:#FFF; font-weight:bold;'}}) }}
	<input type="submit" class="btn btn-default pull-right text-normal active" value="Encontrar empresas">
	{{ form_end(form) }}
{% endblock %}


{% block table_header %}
	<th>Name</th>
	<th>User Name</th>
	<th>Email</th>
	<th>Groups</th>
	<th></th>
{% endblock %}

{% block table_body %}
	<td>{{ entity.name }}</td>
	<td>{{ entity.username }}</td>
	<td>{{ entity.email }}</td>
	<td>{{ entity.groups | join(', ') }}</td>
{% endblock %}


