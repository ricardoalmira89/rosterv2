{% extends '::base.html.twig' %}

{% block body -%}

    <div class="row" style="margin-top:20px;">
        <div class="col-sm-12">
            <h2 class="contacto-title">User Edit</h2>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <form action="{{ path('usuario_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
                <input type="hidden" name="_method" value="PUT" />
                {{ form_widget(edit_form) }}
                <div class="row" style="margin-top:15px;">
                    <div class="col-sm-9 col-sm-offset-2">
                        <div class="form-group">
                            <a href="{{ path('usuario') }}" class="btn btn-default active">Cancel</a>
                            <input type="submit" class="btn btn-default active" value="Guardar">
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}


