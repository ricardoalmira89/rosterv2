{% extends '::base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <h1>Graduate Student</h1>
        </div>
    </div>

    <form action="{{ path('student_graduate',{'id' : entity.id}) }}" method="post" {{ form_enctype(form) }}>
        <div class="row">
            <div class="col-lg-12">
                <!-- Graduated -->
                <div role="tabpanel" class="tab-pane active" id="tab006">
                    <div class="form-horizontal">
                        <div class="row">
                            <div class="col-sm-12">
                                <h4 class="contacto-title" style="border-bottom: 1px solid #CCC;">Graduated Information</h4>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">Company Name:</label>
                                    <div class="col-sm-9">{{ form_widget(form.companyName) }}</div>
                                </div>
                            </div>

                            <div class="col-sm-6 date startWorkingDate">
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">Start Working Date:</label>
                                    <div class="col-sm-9">
                                        {{ form_widget(form.startWorking) }}
                                        <span class="add-on"><i class="icon-th"></i></span>
                                    </div>
                                </div>
                            </div>

                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">Supervisor Phone:</label>
                                    <div class="col-sm-9">{{ form_widget(form.supervisorPhone) }}</div>
                                </div>
                            </div>

                            <div class="col-sm-6 date diplomaPrintedDate">
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">Printed Diploma Date:</label>
                                    <div class="col-sm-9">
                                        {{ form_widget(form.diplomaPrinted) }}
                                        <span class="add-on"><i class="icon-th"></i></span>
                                    </div>
                                </div>
                            </div>

                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">Diploma Received:</label>
                                    <div class="col-sm-9">{{ form_widget(form.diplomaReceived) }}</div>
                                </div>
                            </div>

                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">Employment Status:</label>
                                    <div class="col-sm-9">{{ form_widget(form.employmentStatus) }}</div>
                                </div>
                            </div>

                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">Job Title:</label>
                                    <div class="col-sm-9">{{ form_widget(form.jobTitle) }}</div>
                                </div>
                            </div>

                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">Supervisor Name:</label>
                                    <div class="col-sm-9">{{ form_widget(form.supervisorName) }}</div>
                                </div>
                            </div>

                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">Employeer Address:</label>
                                    <div class="col-sm-9">{{ form_widget(form.employerAddress) }}</div>
                                </div>
                            </div>

                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">Licensed:</label>
                                    <div class="col-sm-9">{{ form_widget(form.licensed) }}</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <input type="submit" value="Save" class="btn btn-default active" id="submit-btn">
            </div>
        </div>

    </form>

{% endblock %}

{% block javascripts%}
    {{ parent() }}
    <script type="text/javascript">

        function activateTab(tabId){
            $('.tab-pane').removeClass('active');
            $('.limenu').removeClass('active');
            $('#tab00'+tabId).addClass('active');
            $('#l00'+tabId).addClass('active');
        }

        $(document).ready(function() {

            var programs = $('#student_programs');
            var schedules = $('#student_schedules');

            activateTab('1');

            programs.change(function(){
                ajaxGetSchedules(programs, schedules, getSelectedComma(), '{{ path('ajax_schedules') }}');
            });

            $(".diplomaPrintedDate").datetimepicker({
                format: "mm/dd/yyyy",
                linkField: "alm_rosterbundle_graduated_diplomaPrinted",
                linkFormat: "mm/dd/yyyy"
            });

            $(".startWorkingDate").datetimepicker({
                format: "mm/dd/yyyy",
                linkField: "alm_rosterbundle_graduated_startWorking",
                linkFormat: "mm/dd/yyyy"
            });


        });
    </script>

{% endblock %}
